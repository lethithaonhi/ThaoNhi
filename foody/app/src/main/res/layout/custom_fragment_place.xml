<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardviewQA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtLuotThich"
                android:layout_margin="5dp"
                android:background="@drawable/background_cycle"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:gravity="center"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTenQuanAnODau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Youth House"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtDiaChiQuanAnODau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36 Đường quận huyện"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtKhoangCachODau"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3.8 km"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgQuanAnPlace"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/qa1"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btnDatMon"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order1"
            android:background="@drawable/button_comment"
            android:drawableTop="@drawable/ic_shipping"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <LinearLayout
            android:id="@+id/containerBinhLuan1"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ccimgbinhluan1"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="608"
                android:gravity="center"
                android:src="@drawable/qa1"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTieuDe1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Youth House"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtNoiDungBL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36 Đường quận huyện"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtDiemBL1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8.0"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerBinhLuan2"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ccimgbinhluan2"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="608"
                android:gravity="center"
                android:src="@drawable/qa1"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTieuDe2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Youth House"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtNoiDungBL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="36 Đường quận huyện"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtDiemBL2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3.8"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTongBL"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:drawableLeft="@drawable/ic_comment"/>

            <TextView
                android:id="@+id/txtTongHABL"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:drawableLeft="@drawable/icon_camera"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>